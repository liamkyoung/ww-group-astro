---
import SocialList from "@/components/SocialList.astro";
import { ContactForm } from "@/components/inputs/ContactForm";
import Default from "@/layouts/Default.astro";
export const prerender = false;
---

<Default>
  <div class="global-margin-x my-24 overflow-hidden">
    <div class="mb-16">
      <h1>Send Us A Message!</h1>
    </div>

    <div
      class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start lg:items-center"
    >
      <ContactForm client:load />
      <div
        class="border-t-2 pt-12 lg:border-l-2 lg:border-t-0 lg:pt-0 lg:text-left border-wwRed pl-0 lg:pl-12"
      >
        <SocialList colorScheme="red" />
      </div>
    </div>
  </div>
</Default>

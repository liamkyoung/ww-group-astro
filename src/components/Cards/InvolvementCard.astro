---
import type { Involvement } from "@/lib/queries/involvement";
import { urlFor } from "@/lib/sanityImage";

interface Props {
  className?: string;
  doc?: Involvement;
}

const { doc } = Astro.props as Props;

if (!doc) {
  // If no doc is passed, render nothing (or you could show a placeholder)
}

const { title, image, description, highlight, linkToGroupWebsite } = doc || {};

const sanitizedDescription = description ? description.replace(/\s/g, " ") : "";

const hasLink = !!linkToGroupWebsite;
---

{
  doc && (
    <div class={`min-w-64`}>
      {hasLink ? (
        <a
          href={linkToGroupWebsite}
          class="hover:opacity-90 block"
          target="_blank"
          rel="noreferrer"
        >
          <div class="max-w-64">
            <div class="relative">
              {image && (
                <img src={urlFor(image).url()} class="size-64 object-contain" />
              )}
            </div>
            <div class="my-4 space-y-3">
              {title && <h4>{title}</h4>}
              {highlight && (
                <div class="flex items-center gap-2">
                  <div class="inline-flex gap-2">
                    <div class="p-1 rounded-full bg-wwRed">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="size-4 text-white"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
                          clip-rule="evenodd"
                        />
                      </svg>
                    </div>
                  </div>
                  <p class="text-sm font-bold">{highlight}</p>
                </div>
              )}
              {sanitizedDescription && <p>{sanitizedDescription}</p>}
            </div>
          </div>
        </a>
      ) : (
        <div class="max-w-64">
          <div class="relative">
            {image && (
              <img src={urlFor(image).url()} class="size-64 object-contain" />
            )}
          </div>
          <div class="my-4 space-y-3">
            {title && <h4>{title}</h4>}
            {highlight && (
              <div class="flex items-center gap-2">
                <div class="inline-flex gap-2">
                  <div class="p-1 rounded-full bg-wwRed">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-4 text-white"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </div>
                </div>
                <p class="text-sm font-bold">{highlight}</p>
              </div>
            )}
            {sanitizedDescription && <p>{sanitizedDescription}</p>}
          </div>
        </div>
      )}
    </div>
  )
}

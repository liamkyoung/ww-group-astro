---
import CTA from "@/components/CTA.astro";
import DefaultHero from "@/components/Hero/DefaultHero.astro";
import Default from "@/layouts/Default.astro";
import HeroImg from "@/assets/services/sales-service-hero.webp";
import { SALES_SERVICE_PAGE_METADATA } from "@/globals/metadata";
---

<Default {...SALES_SERVICE_PAGE_METADATA}>
  <DefaultHero
    header="Sales Service"
    imageSrc={HeroImg.src}
    body={[
      "Our sales services are driven by a record-setting commercial team. Recognized as off-market leaders in Downtown St. Petersburg, we excel in sourcing exclusive opportunities and delivering tailored solutions for developments and investments. Through our Developer Services Network, we connect clients with unparalleled resources and strategic alliances, including joint ventures and capital sourcing, ensuring every project reaches its full potential.",
      "From condominium presales at landmark developments like REFLECTION to transformative projects such as The Factory and the historic Christ United Methodist Church redevelopment—St. Petersburg's first public-private partnership in 30 years—we bring a proven track record of success. Whether facilitating sales, structuring joint ventures, or pioneering innovative partnerships, our team delivers results that set new standards in the real estate industry.",
    ]}
  />
  <CTA />
</Default>
